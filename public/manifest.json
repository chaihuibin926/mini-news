{
  "manifest_version": 3,
  "name": "mini-news",
  "description": "mini-news",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png" 
    }
  },
  "permissions": [
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "server-worker.js"
  }
}